
@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<ComputerShop.Data.Models.Computer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Computer List</h2>
<br>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Computer Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th> 
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <th>@x.ComputerID</th>
        <td>@x.Name</td>
        <td>@x.Price</td>
        <td>@x.Stock</td>
        <td>@x.Category.CategoryName</td>
        <td><a href="/Computer/ComputerDelete?id=@x.ComputerID" class="btn btn-danger">Delete</a></td>
        <td><a href="/Computer/ComputerGet?id=@x.ComputerID" class="btn btn-success">Update</a></td>
        <td><a href="#" class="btn btn-info">Details</a></td>
    </tr>        
    }
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
<a href="/Computer/ComputerAdd/" class="btn btn-primary">New Computer</a>